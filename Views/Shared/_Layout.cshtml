			<div class="pull-right dropdown">
					
				<div class="btn-group dropdownMenu">
				  <p class="btn btn-dropdown" href="#"><i class="fa fa-user fa-fw"></i> @ViewBag.UserName</p>
					  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
						<span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
					  </a>
				  <ul class="dropdown-menu">
					<li><a href="#"><i class="fa fa-pencil fa-fw"></i>Edit Profile</a></li>
					
					<li class="divider"></li>
					<li><a href="@Url.Action("Logout","Class")"><i class="fa fa-ban fa-fw"></i>Logout</a></li>
					
					
				  </ul>
				</div>
					
					
			</div>
