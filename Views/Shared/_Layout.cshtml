					<li><a href="@Url.Action("ManageRequests", "Class", new { classId= ViewBag.ClassId})"><i class="fa fa-trash-o fa-fw" ></i>Manage Requests</a></li>
					<li><a href="@Url.Action("ViewClassStudents", "Class", new { classId= ViewBag.ClassId})"><i class="fa fa-group fa-fw"></i>View Students</a></li>
                          <li class="divider"></li>
                      }
					<li><a href="@Url.Action("Logout","Class")"><i class="fa fa-ban fa-fw"></i>Logout</a></li>
					
				  </ul>
				</div>
					
					
			</div>
            </div>
			
			
            <!-- /.navbar-collapse -->
			
        </div>
		
        <!-- /.container-fluid -->
    </nav>
        }
        else if(ViewBag.Title == "Activity Page"){
            <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
