                    <li class="active" id="contentLink" >
                        <a   href="#">Class Content </a>	
                    </li>
                    <li id="assignmentLink">
                        <a  href="#">Assignments </a>
                    </li>
                    <li id="quizLink" >
                        <a  href="#">Quizzes </a>
                    </li>
                    <li id="otherLink">
                        <a   href="#">Other</a>
                    </li>
					<li id="aboutLink">
                        <a   href="#">About</a>
                    </li>
					
                </ul>
				
				<div class="pull-right dropdown">
					
				<div class="btn-group dropdownMenu">
				  <p class="btn btn-dropdown" href="#"><i class="fa fa-user fa-fw"></i> @ViewBag.UserName</p>
					  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
						<span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
					  </a>
				  <ul class="dropdown-menu">
                      @if(ViewBag.UserType == "Student"){
					<li><a  href="#sureDialog" data-toggle="modal" data-target="#sureDialog"><i class="fa fa-remove fa-fw"></i>Leave Class</a></li>
                      }
                      else{
					<li><a href="@Url.Action("addActivityForm", "Class", new { classId = ViewBag.ClassId})"><i class="fa fa-plus fa-fw"></i>Add Activity</a></li>
