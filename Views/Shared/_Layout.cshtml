                <a class="navbar-brand" href="/Class/Index">Class Hub</a>
				<a class="navbar-text" style="color:white; margin-bottom: 0px;" href="@Url.Action("ClassPage", "Class", new { classId = ViewBag.ClassId})"> @ViewBag.ClassName</a>
				
				 
            </div>

			
				 
			
            
            <!-- /.navbar-collapse -->
			
        </div>
        <!-- /.container-fluid -->
    </nav>
        }
        
        if(ViewBag.Title == "Search Results"){
            <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" href="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
